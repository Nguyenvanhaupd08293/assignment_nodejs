<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
<style>
    td {
        word-wrap: break-word;
    }
</style>
<%- include('layouts/navbar'); %>
    <div class="container mt-5">
        <h2>Danh sách sản phẩm</h2>

        <table class="table table-striped table-bordered table-responsive">
            <thead class="table-primary text-center">
                <tr>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Description</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <% for (let product of data) { %>
                <tbody id="listProduct">
                    <tr class="text-center">
                        <td>
                            <%= product.title %>
                        </td>
                        <td style="width: 200px;">
                            <img src="images/<%= product.imageURL %>" alt="" class="img-fluid">
                        </td>
                        <td>
                            <%= product.price %>
                        </td>
                        <td>
                            <textarea name="" id="" cols="30" rows="7" disabled=""><%=product.description %></textarea>
                        </td>
                        <td class="">
                            <a href="/updateProduct/<%= product.id  %>" class="btn_edit nav-link btn btn-warning mb-2 ">EDIT</a>
                            <a href="/delete/<%= product.id %>" data-id="-NrEclozDqY8_3FjXgz5" class="btn-del nav-link btn btn-danger" onclick="return confirm('Bạn chắc chắn muốn xoá ?')">DELETE </a>
                        </td>
                    </tr>
                </tbody>
                <% } %>
        </table>
    </div>