<%- include('layouts/navbar'); %>
    <div class="container form-text" style="margin-top: 20px;">
        <div class="row">
            <div class="col-sm-12">
                <h1>Thêm Sản Phẩm</h1>
            </div>
            <div class="col-sm-12">
                <!-- Form Thêm sản phẩm -->
                :
                <form class="product-form" action="/creatPro" method="POST" enctype="multipart/form-data">
                    <!-- Tên sản phẩm -->
                    <div class="form-group">
                        <label for="txtname">Tên sản phẩm</label>
                        <input class="form-control" id="txtname" type="text" name="nameProduct" value="">
                    </div>
                    <!-- Mô tả sản phẩm -->
                    <div class="form-group">
                        <label for="txtdesc">Mô tả sản phẩm</label>
                        <input type="text" value="" name="txtdesc" placeholder="Nhập mô tả sản phẩm" required></input>
                    </div>

                    <!-- Giá sản phẩm -->
                    <div class="form-group">
                        <label for="txtprice">Giá sản phẩm</label>
                        <input class="form-control" type="number" id="priceProduct" name="priceProduct" value="">
                    </div>
                    <div class="form-group">
                        <label for="txtpic">Url Hình ảnh</label>
                        <div class="custom-file">
                            <input type="file" id="txtpic" name="imgProduct" accept=".png,.gif,.jpg,.jpeg">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" name="btnsubmit">Thêm sản phẩm</button>
                </form>
            </div>
        </div>
    </div>