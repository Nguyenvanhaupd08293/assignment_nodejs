<%- include('layouts/navbar'); %>
    <div class="container form-text" style="margin-top: 20px;">
        <div class="row">
            <div class="col-sm-12">
                <h1>Edit Product</h1>
            </div>
            <div class="col-sm-12">
                <!-- Form Thêm sản phẩm -->
                <form class="product-form" action="/updateProduct/<%= data[0].id  %>" method="POST" enctype="multipart/form-data">
                    <!-- Tên sản phẩm -->
                    <div class="form-group">
                        <label for="txtname">Tên sản phẩm</label>
                        <input class="form-control" id="txtname" type="text" name="nameProduct" value="<%= data[0].title %>">
                    </div>
                    <!-- Mô tả sản phẩm -->
                    <div class="form-group">
                        <label for="txtdesc">Mô tả sản phẩm</label>
                        <input type="text" value="<%= data[0].description %>" name="txtdesc" placeholder="Nhập mô tả sản phẩm" required></input>
                    </div>

                    <!-- Giá sản phẩm -->
                    <div class="form-group">
                        <label for="txtprice">Giá sản phẩm</label>
                        <input class="form-control" type="number" id="priceProduct" name="priceProduct" value="<%= data[0].price %>">
                    </div>
                    <div class="form-group">
                        <label for="txtpic">Url Hình ảnh</label>
                        <div class="custom-file">
                            <input type="file" id="txtpic" name="imgProduct" accept=".png,.gif,.jpg,.jpeg">
                            <img src="/images/<%= data[0].imageURL %>" alt="">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary" name="btnsubmit">UPDATE</button>
                </form>
            </div>
        </div>
    </div>